extends layout

include _includes/sharedHTMLfunctions.jade

block content
 .row.page-header
 .col-lg-12
 h1= pageHeader.title
 .row
  .col-xs-12.col-md-9
  .row
   .col-xs-12.col-sm-6
 p.rating
   +outputRating(locationInfomation.rating)
   p.address= locationInfomation.address
 .panel.panel-primary
 .panel-heading
   h2.panel-title Opening hours
   .panel-body
   each routine in locationInfomation.openingHours
    p #{routine.Days} : #{routine.Duration}
    
  .panel.panel-primary
  .panel-heading
  h2.panel-title Facilities
  .panel-body
   each facility in locationInfomation.facilities
    span.label.label-warning
    span.glyphicon.glyphicon-ok
    | &nbsp; #{facility}
    | &nbsp;
 .col-xs-12.col-sm-6.location-map
